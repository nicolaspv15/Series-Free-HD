---
import Layout from '../layouts/Layout.astro';
import Cookies from '../components/cookies'

---

<Layout title="Series Free HD">

	<div class="main">
        <nav>
            <span> <img src="https://exquisite-centaur-acdf6d.netlify.app/logo.png"></span> 
            <div>
                <button class="btn btn2">English</button>
                <button class="btn btn-red-sm">Sign In</button>
            </div>
        </nav>
        <div class="box">

        </div>
        <div class="hero">
			<span>Welcome to</span> <span>SERIES FREE HD</span>
            <span> Unlimited movies, TV shows and more</span>
            <span>Watch anywhere. Cancel anytime.</span>

            <span> Ready to watch? Enter your email to create or restart your membership.</span>
            
            <Cookies client:visible/>

        </div>
        <div class="separation"></div>
    </div>


   
</body>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Martel+Sans:wght@700;800;900&display=swap');

* {
    padding: 0;
    margin: 0;
    font-family: Netflix Sans, Helvetica Neue, Segoe UI, Roboto, Ubuntu, sans-serif;
}

#serie {
    
    font-size: 50px;
    font-weight: 900;
    text-align: center;
	color: red;
}


body {
    background-color: black;
}

.main {
    
    height: 100vh;
    position: relative;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: max(1700px, 100vw);

}

.main .box {
    height: 100vh;
    width: 100%;
    opacity: 0.7;
    background-color: black;
    position: absolute;
    top: 0;
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 60vw;
    margin: auto;
    height: 100px;
    gap: 100px;


}

nav img {
    color: red;
    width: 165px;
    position: relative;
    z-index: 10;
}

nav button {
    position: relative;
    z-index: 10;
}

.hero {
    font-family: "Martel Sans", sans-serif;
    font-family: 'Poppins', 'sans-serif';
    height: calc(100% - 100px);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
    font-size: 20;
    position: relative;
    gap: 20px;
    padding: 0 30px;

}

.hero> :nth-child(1) {
    font-size: 48px;
    font-weight: 900;
    text-align: center;

}

.hero> :nth-child(2) {
    font-size: 68px;
    font-weight: 900;
    text-align: center;
	color: rgb(255, 0, 0);
}

.hero> :nth-child(3) {
    font-size: 20px;
    font-weight: 400;
    text-align: center;
}

.separation {
    height: 7px;
    background-color: rgb(64, 63, 63);
}

.btn {
    padding: 3px 8px;
    background-color: rgba(23, 23, 23, 0.7);
    font-weight: 600;
    border: 1px solid rgba(188, 185, 185, 0.5);
    color: white;
    border-radius: 3px;
}

.btn-red {
    background-color: red;
    color: white;
    padding: 13px 31px 13px 31px;
    font-size: 24px;
    border-radius: 3px;
    border: none;
    font-weight: 500;
    font-family: Netflix Sans, Helvetica Neue, Segoe UI, Roboto, Ubuntu, sans-serif;
    cursor: pointer;

}

.btn-red-sm {
    background-color: red;
    color: white;
    border: none;
    border-radius: 3px;
    padding: 6px 15px 6px 15px;
    font-size: 16px;
    font-weight: 600;
    

}

.btn2 {
    padding: 5px 38px 6px 38px;
    font-size: 16px;
    font-weight: 600;
}

.hero-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;

}

.main input {
    padding: 18px 172px 18px 12px;
    font-size: 16px;
    font-weight: 400;
    border-radius: 3px;
    background-color: rgba(23, 23, 23, 0.7);
    font-weight: 600;
    border: 1px solid rgba(188, 185, 185, 0.5);
    color: white;


}





</style>
